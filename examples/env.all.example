# Example environment configuration for 'all' deployment type
# This enables all features: git, docker, golang, helm, gcloud, ssh, ansible

# Deployment type
export DEPLOYMENT_TYPE=all

# Proxy settings (configure if behind a corporate proxy)
export PROXY_HOST=proxy.company.com
export PROXY_PORT=8080
export NO_PROXY=localhost,127.0.0.1,.local,.company.com

# Git configuration
export GIT_USER_NAME="John Doe"
export GIT_USER_EMAIL="john.doe@company.com"

# Apply with: chezmoi init --apply https://github.com/hiroyoshii/dotfiles.git
