# Example environment configuration for 'onprem' deployment type
# Enables: git, ssh, ansible (for on-premise infrastructure management)

# Deployment type
export DEPLOYMENT_TYPE=onprem

# Proxy settings (commonly used in on-premise environments)
export PROXY_HOST=proxy.internal.local
export PROXY_PORT=3128
export NO_PROXY=localhost,127.0.0.1,.local,.internal.local

# Git configuration
export GIT_USER_NAME="Infrastructure Admin"
export GIT_USER_EMAIL="infra@internal.local"

# Apply with: chezmoi init --apply https://github.com/hiroyoshii/dotfiles.git
