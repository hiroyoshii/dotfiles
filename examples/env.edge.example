# Example environment configuration for 'edge' deployment type
# Enables: git, docker, golang, ssh (lightweight for edge devices)

# Deployment type
export DEPLOYMENT_TYPE=edge

# Proxy settings (configure if needed)
export PROXY_HOST=
export PROXY_PORT=8080
export NO_PROXY=localhost,127.0.0.1,.local

# Git configuration
export GIT_USER_NAME="Edge Device"
export GIT_USER_EMAIL="edge@example.com"

# Apply with: chezmoi init --apply https://github.com/hiroyoshii/dotfiles.git
