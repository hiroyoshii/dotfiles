{{- /* Docker daemon configuration with proxy and optimization settings */ -}}
{
  "log-driver": "json-file",
  "log-opts": {
    "max-size": "10m",
    "max-file": "3"
  },
  "features": {
    "buildkit": true
  },
  "default-address-pools": [
    {
      "base": "172.17.0.0/16",
      "size": 24
    }
  ],
{{- if .proxy.host }}
  "proxies": {
    "http-proxy": "{{ .proxy.url }}",
    "https-proxy": "{{ .proxy.httpsUrl }}",
    "no-proxy": "{{ .proxy.noProxy }}"
  },
{{- end }}
  "storage-driver": "overlay2",
  "userland-proxy": false,
  "live-restore": true
}
